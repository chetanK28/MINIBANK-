@{
    if (ViewBag.ex != null)
    {
        <a href="@Url.Action("Logout", "Auth")">Logout</a>
    }
    else
    {
        <a href="@Url.Action("Login", "Auth")">Login</a>
    }
}

<div>
    @if (ViewBag.ex != null)
    {
        <p>Welcome, @ViewBag.ex</p> <!-- Display the user email -->
    }
    else
    {
        <p>No message available.</p>
    }

    Welcome to index
</div>
