@model IEnumerable<MINIBANK.Models.Transaction>

@{
    ViewData["Title"] = "All Transactions";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Account ID</th>
                <th>Amount</th>
                <th>Type</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionId</td>
                    <td>@transaction.AccountId</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.Type</td>
                    <td>@transaction.CreatedAt</td>
                    <td>
                        <a asp-action="ViewTransactionById" asp-route-transactionId="@transaction.TransactionId">View</a> |
                        <a asp-action="DeleteTransaction" asp-route-transactionId="@transaction.TransactionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}


else
{
    <p>No transactions found.</p>
}
<div style="margin-top: 10px;">
    <button onclick="location.href='@Url.Action("UserDashboard", "Auth")'" class="btn btn-secondary">
        Back to Dashboard
    </button>
</div>