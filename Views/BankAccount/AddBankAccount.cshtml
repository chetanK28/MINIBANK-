@model MINIBANK.Models.BankAccount

@{
    //ViewData["Title"] = "Add Bank Account";
}

<h1>Add Bank Account</h1>
<h4>Bank Account Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddBankAccount" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- User ID -->
            
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            

            <!-- Balance Field -->
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>


            <!-- Account Type Dropdown -->
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(MINIBANK.Models.AccountType)))
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Created At Field -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>


            <!-- Submit Button -->
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ViewBankAccounts" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
