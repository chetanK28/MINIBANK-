@model IEnumerable<MINIBANK.Models.BankAccount>

@{
    ViewData["Title"] = "View Bank Accounts";
}

<h1>Bank Accounts</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().AccountId)</th>
            <th>@Html.DisplayNameFor(model => model.First().Balance)</th>
            <th>@Html.DisplayNameFor(model => model.First().Type)</th>
            <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>

            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => account.AccountId)</td>
                <td>@Html.DisplayFor(modelItem => account.Balance)</td>
                <td>@Html.DisplayFor(modelItem => account.Type)</td>
                <td>@Html.DisplayFor(modelItem => account.CreatedAt)</td>
                <td>Active</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ViewBankAccounts">Back to List</a>
</div>
